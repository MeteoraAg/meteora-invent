{
  "name": "meteora-invent-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Meteora Invent â€“ Solana DeFi monorepo (studio, scaffolds, shared packages)",
  "author": "Meteora",
  "license": "MIT",
  "packageManager": "pnpm@9.12.0",
  "engines": { "node": ">=18.18.0" },
  "scripts": {
    "build": "turbo run build --filter=...[HEAD]",
    "dev": "turbo run dev --parallel",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier . -w",
    "format:check": "prettier . -c",
    "clean": "turbo run clean && rimraf node_modules",
    "ci": "pnpm format:check && pnpm lint && pnpm type-check && pnpm build",
    "syncpack:check": "syncpack list-mismatches",
    "syncpack:fix": "syncpack fix-mismatches",
    "prepare": "husky install",
    "validate-env": "echo Add env validation script"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "syncpack": "^12.3.2",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md,yml,yaml}": ["prettier --write"]
  }
}
