{
  // Standalone typecheck config that *does not* require project references or built outputs.
  // This avoids TS6305 while keeping your existing CI step:
  //   pnpm exec tsc --noEmit --project tsconfig.typecheck.json
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": [
    "packages/**/src/**/*",
    "scaffolds/**/src/**/*",
    "studio/src/**/*"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "studio/tests/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
